<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        Title="MainWindow" Height="419.6" Width="513.6">
    <Grid>
        <Button x:Name="btnTask" Content="Add" VerticalAlignment="Bottom" Width="75" Margin="0,0,10.2,9.6" HorizontalAlignment="Right" Click="btnTask_Click"/>
        <ListBox x:Name="lstTask" Margin="10,5,5.2,303.6"/>
        <Label Content="New Task" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,265.2,37.6" RenderTransformOrigin="-2.448,0.273"/>
        <Button x:Name="btnRemove" Content="Remove Sel" VerticalAlignment="Bottom" Width="75" Margin="10,0,0,55.6" HorizontalAlignment="Left" Click="btnRemove_Click" RenderTransformOrigin="0.493,-3.01"/>
        <TextBox x:Name="txTask" HorizontalAlignment="Right" Height="23" Margin="0,0,90.2,9.6" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="234" KeyDown="txTask_KeyDown" MouseEnter="txTask_MouseEnter" MouseMove="txTask_MouseMove"/>
    </Grid>
</Window>
